<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius for rounded edges -->
        </shape>
    </item>
    <!-- Border (Stroke) -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Use the same corner radius as the background shape -->
        </shape>
    </item>
</layer-list>