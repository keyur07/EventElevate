<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PermissionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_70sdp"
            android:id="@+id/photo"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_70sdp">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/folder"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/_15sdp"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/Header"
            android:textStyle="bold"
            android:text="Storage Access Needed"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/photo"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/subheader"
            android:text="To enhance your experience, we need access to your device's storage. Granting permission will enable you to save and retrieve files seamlessl"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/robotoregular"
            android:textColor="#3C3C3C"
            android:textAlignment="center"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Header"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/allow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="allow"
            android:layout_below="@id/subheader"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/button_round"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"></Button>

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="cancel"
            android:backgroundTint="@color/light_grey"
            android:layout_below="@id/allow"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/button_round"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="15dp"></Button>

    </RelativeLayout>

</RelativeLayout>