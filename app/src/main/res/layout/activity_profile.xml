<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/thumbnail"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/back_btn"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_provider_name"
                android:text="Keyur Moradiya"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_location"
                android:layout_below="@id/txt_provider_name"
                android:text="Kitchener ON, CA"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/btn_share"
                android:layout_toLeftOf="@id/btn_like"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_share_24"
                android:layout_height="wrap_content"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/btn_like"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/round_favorite_border_24"
                android:layout_height="wrap_content"
                app:tint="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_starting_from"
                android:text="Starting from"
                android:visibility="gone"
                android:layout_below="@id/btn_share"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/grey"
                android:textSize="@dimen/_11sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_price"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="$450"
                android:layout_below="@id/txt_starting_from"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/Grey"
                android:textSize="@dimen/_13sdp"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/photo_recyclerview"
            android:layout_height="@dimen/_100sdp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/_10sdp"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Send service provider a message"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/txt_header"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_below="@+id/txt_header"
                    android:id="@+id/txt_message"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittextbackground"
                    android:backgroundTint="@color/light_grey"
                    android:text="Hii, is this available?"
                    android:textSize="@dimen/_11sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"/>

                <Button
                    android:layout_width="match_parent"
                    android:background="@drawable/button_round"
                    android:layout_below="@id/txt_message"
                    android:text="SEND"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="@dimen/_30sdp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/robotobold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/txt_description"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/Grey"
            android:text="thi is demo"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="1dp"/>
        

    </LinearLayout>

    </LinearLayout>

</ScrollView>