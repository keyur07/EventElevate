<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/signup_background"
    android:layout_height="match_parent"
    android:id="@+id/coordinator"
    tools:context=".Activity.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#A1000000"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/robotobold"
            android:text="Hello!\nReady to explore?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/u_name"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_below="@id/title_text"
            android:layout_height="@dimen/_40sdp">

            <EditText
                android:id="@+id/edt_firstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_round_transparent"
                android:fontFamily="@font/robotoregular"
                android:hint="Firstname"
                android:lineHeight="0dp"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textColorHint="#70ffffff"
                android:textSize="@dimen/_12sdp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/edt_lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_round_transparent"
                android:fontFamily="@font/robotoregular"
                android:hint="Lastname"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:lineHeight="0dp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textColorHint="#70ffffff"
                android:textSize="@dimen/_12sdp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>


        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/u_name"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_round_transparent"
            android:fontFamily="@font/robotoregular"
            android:hint="Email"
            android:lineHeight="0dp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorHint="#70ffffff"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/edt_email"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_round_transparent"
            android:fontFamily="@font/robotoregular"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:lineHeight="0dp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorHint="#70ffffff"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/edt_password"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_round_transparent"
            android:fontFamily="@font/robotoregular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:lineHeight="0dp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorHint="#70ffffff"
            android:textSize="@dimen/_12sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_account_create"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/edt_confirm_password"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_round"
            android:text="create Account"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_account_create"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:id="@+id/txt_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:text="You already have account?"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toRightOf="@id/txt_"
                android:fontFamily="@font/robotobold"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>