<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreateFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/start_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/robotobold"
            android:paddingStart="@dimen/_20sdp"
            android:text="Cancel"
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/robotobold"
            android:text="New Service"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/robotobold"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="Publish"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_40sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/add_images_border">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:id="@+id/parent_recyclerview"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/horizontal"
                        android:scrollbars="none">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingEnd="@dimen/_20sdp"
                        android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_toEndOf="@id/imageView_create_add"
                        android:visibility="visible" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageView_create_add"
                        android:layout_width="95dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_height="95dp"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/add_images_border"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@drawable/baseline_add_to_photos_24"
                                app:tint="#7E7E7E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/robotobold"
                                android:text="Add photos"
                                android:textColor="#7E7E7E" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                    </HorizontalScrollView>
                </androidx.core.widget.NestedScrollView>


                <LinearLayout
                    android:id="@+id/btn_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_add_to_photos_24"
                        app:tint="#7E7E7E" />

                    <TextView
                        android:id="@+id/addButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/robotobold"
                        android:text="Add photos"
                        android:textColor="#7E7E7E" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="-5dp"
                android:id="@+id/txt_total"
                android:fontFamily="@font/robotoregular"
                android:text="Photos: 0/10 - Choose your photos for listing"
                android:textSize="@dimen/_9sdp" />

            <EditText
                android:id="@+id/edit_titile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:drawablePadding="8dp"
                android:drawableTint="#5005445E"
                android:fontFamily="@font/robotoregular"
                android:hint="Title"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/edit_payment_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:drawableTint="#7E7E7E"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/robotoregular"
                android:paddingStart="16dp" />


            <EditText
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:drawablePadding="8dp"
                android:drawableTint="#5005445E"
                android:fontFamily="@font/robotoregular"
                android:hint="Price"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/edit_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:drawableTint="#7E7E7E"
                android:fontFamily="@font/robotoregular"
                android:spinnerMode="dropdown"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:fontFamily="@font/robotoregular"
                android:gravity="start|top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingStart="16dp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="16dp"
                android:scrollHorizontally="false"
                android:textColor="@color/text_color" />


            <EditText
                android:id="@+id/edit_termsandcondition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/add_images_border"
                android:fontFamily="@font/robotoregular"
                android:gravity="start|top"
                android:hint="Terms And Condition"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingStart="16dp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="16dp"
                android:scrollHorizontally="false"
                android:textColor="@color/text_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#90575757" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/robotobold"
                android:text="Location"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_16sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/robotoregular"
                    android:text="Kitchener, ON, CA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@id/txt_location"
                    android:fontFamily="@font/robotobold"
                    android:id="@+id/edit_location"
                    android:text="Edit"
                    android:visibility="gone"
                    android:textColor="@color/sky_blue"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#90575757" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/create_pravacy" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>