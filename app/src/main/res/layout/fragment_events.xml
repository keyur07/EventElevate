<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/start_color"
            app:navigationIcon="@drawable/ic_menu_24"
            app:titleTextColor="@color/white">

            <RelativeLayout
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/_round_"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_location_on_24" />

                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@id/location_icon"
                    android:text="Surat"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/location_name"
                    android:src="@drawable/_more_24" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar_main"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/search"
                    android:drawableTint="#5005445E"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawablePadding="8dp"
                    android:hint="Search"
                    android:fontFamily="@font/robotoregular"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_categories"
                    android:layout_below="@id/editTextSearch"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Categories"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/start_color"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_categories_see_all"
                    android:layout_below="@id/editTextSearch"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:text="See all"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#7C7C7C"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/categories_list"
                    android:layout_below="@+id/txt_categories"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="@dimen/_100sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_organizer"
                    android:layout_below="@id/categories_list"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Top Organizer"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/start_color"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_categories_see_all_"
                    android:layout_below="@id/categories_list"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:text="See all"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#7C7C7C"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/location_list_"
                    android:layout_below="@+id/txt_organizer"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="@dimen/_130sdp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_organizer_"
                    android:layout_below="@id/location_list_"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Recently Listed"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/start_color"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recently_listed"
                    android:layout_below="@+id/txt_organizer_"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:imeOptions="actionSearch"
        android:theme="@style/Widget.BottomNavigationView"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@color/start_color"
        app:itemTextColor="@color/start_color"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>