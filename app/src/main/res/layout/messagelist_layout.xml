<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingVertical="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lluser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="@dimen/_5sdp"
        android:visibility="visible"
        android:layout_alignParentBottom="true">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:id="@+id/parent_photo"
                    android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"
                    android:id="@+id/profile_PHOTO"
                    android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@id/parent_photo"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/valueTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/txt_time"
                        android:fontFamily="@font/robotoregular"
                        android:textStyle="bold"
                        android:text="Prashant Jasoliya"
                        android:textColor="@color/Grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/keyTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/valueTextView"
                        android:fontFamily="@font/robotoregular"
                        android:text="Hii is this available?"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"
                        android:text="05:14 PM"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </RelativeLayout>

            </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/lluser1"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@color/grey"
        android:layout_height="1dp"/>


</RelativeLayout>
