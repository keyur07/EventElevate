<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_items"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:elevation="0dp"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/image"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                android:id="@+id/thumbnail"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/image"
            android:fontFamily="@font/robotobold"
            android:text="Kitchener Hall"
            android:maxLines="1"
            android:textColor="@color/start_color"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toRightOf="@id/image"
            android:fontFamily="@font/robotoregular"
            android:maxLines="3"
            android:text="David Guetta &amp; Bebe Rexha - Iâ€™m Good (Blue)
(David Guetta, Kamille, Phil Plested, Bebe Rexha, Massimo Gabutti, Maurizio Lobina, Gianfranco Randone)"
            android:textColor="@color/start_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toRightOf="@id/image"
            android:fontFamily="@font/robotobold"
            android:maxLines="3"
            android:text="Estimated : $1200"
            android:textColor="@color/Grey"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toRightOf="@id/image">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_location_on_24"
                app:tint="@color/start_color" />

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/location_icon"
                android:text="kitchener"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/location_name"
                android:src="@drawable/_more_24" />


        </RelativeLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
